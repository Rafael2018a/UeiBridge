<Window x:Class="UeiBridge.CubeNet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UeiBridge.CubeNet"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:IpAddressToStringConverter x:Key="IpAddressToStringConverter" />
        <local:FileInfoToStringConverter x:Key="FileInfoToStringConverter"/>
    </Window.Resources>

    <Grid>
        <Menu FontSize="18">
            <MenuItem Header="_File">
                <MenuItem Header="Load repository file"/>
                <MenuItem Header="Create empty repository" Command="{Binding CreateEmptyRepositoryCommand}"/>
                <MenuItem Header="Save repository" Command="{Binding SaveRepositoryCommand}"/>
                <MenuItem Header="Save repository as"/>
                <MenuItem Header="Close"/>
            </MenuItem>
        </Menu>

        <Border Margin="5,30,5,5" BorderBrush="Navy" BorderThickness="1" CornerRadius="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Border Margin="5" Grid.Row="0" BorderBrush="LightBlue" BorderThickness="1">
                    <StackPanel x:Name="buttonsPanel" Grid.Row="0" Orientation="Horizontal">
                        <!--<ContentControl Width="10"/>-->
                        <Button Content="Find free address" Padding="10,0,10,0" Command="{Binding GetFreeIpCommand}"/>
                        <ContentControl Width="10"/>
                        <Button Content="Get cube signature" Padding="10,0,10,0" Command="{Binding GetCubeSignatureCommand}"/>
                        <ContentControl Width="10"/>
                        <Button Content="Add cube to repository" Padding="10,0,10,0" Command="{Binding AddCubeToRepositoryCommand}"/>
                    </StackPanel>
                </Border>
                <Border x:Name="Dialogs" Grid.Row="1" Margin="5" BorderBrush="LightBlue" BorderThickness="1">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="3">
                            <TextBlock Text="Suggested address "/>
                            <TextBox x:Name="SuggestedIp" Width="100" HorizontalAlignment="Left" Text="{Binding Path=CubeAddress, Converter={StaticResource IpAddressToStringConverter}}" IsEnabled="{Binding IsAddressLocked}" />
                            <Button  Content="Accept" Width="100" HorizontalAlignment="Left" Click="Button_Click"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="3">
                            <TextBlock Text="Cube signature "/>
                            <TextBlock Text="{Binding Path=CubeSignature}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="3">
                            <TextBlock Text="Cube nickname "/>
                            <TextBox Width="100"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="3">
                            <TextBlock Text="Cube description "/>
                            <TextBox Width="500"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <!--<Border x:Name="MessageToUser" Grid.Row="2" Margin="5" BorderBrush="LightBlue" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="{Binding Path=MessageToUser}"/>
                    </StackPanel>
                </Border>-->
                <StatusBar Grid.Row="2" Background="LightGray">
                    <StatusBarItem Content="{Binding Path=RepositoryState}">
                        <!--<StatusBarItem.Content>
                            <TextBlock Text="/>
                        </StatusBarItem.Content>-->
                    </StatusBarItem>
                    <Separator/>
                    <StatusBarItem Content="line 2"/>
                </StatusBar>

            </Grid>
            <!--<GroupBox Grid.Row="1" BorderBrush="Gray" Margin="5" BorderThickness="1" Header="Control">-->
            <!--</GroupBox>-->
        </Border>
    </Grid>
</Window>
